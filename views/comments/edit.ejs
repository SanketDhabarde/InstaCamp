<%- include('../partials/header')-%>

<div class="container">
    <h1 style="text-align: center; margin-top: 3rem;">Edit comment</h1>
    <div class="row">
        <div style="margin: 25px auto; width: 30%;">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%=comment.text %>">
                </div>
                
                <div class="form-group">
                    <button class="form-control btn btn-primary btn-lg">Submit</button>
                </div>
            </form>
            <a href="/campgrounds/campground_id">go back</a>
        </div>
    </div>
</div>

