<%- include('../partials/header')-%>

<div class="container">
    <div class="row">
        <div class="col-md-4" id="formE">
            <h1>Add a comment to <%= campground.name %></h1>
            <form action="/campgrounds/<%= campground._id%>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                
                <div class="form-group">
                    <button class="form-control btn btn-primary btn-lg">Submit</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id%>">go back</a>
        </div>
    </div>
</div>

<%- include('../partials/footer')-%>