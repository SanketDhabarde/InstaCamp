<%- include('../partials/header')-%>

<div class="container">
    <h1 style="text-align: center; margin-top: 3rem;">Add a comment to <%= campground.name %></h1>
    <div class="row">
        <div style="margin: 25px auto; width: 30%;">
            <form action="/campgrounds/<%= campground._id%>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                
                <div class="form-group">
                    <button class="form-control btn btn-primary btn-lg">Submit</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground._id%>">go back</a>
        </div>
    </div>
</div>

<%- include('../partials/footer')-%>